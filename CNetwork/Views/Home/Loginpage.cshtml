@model CNetwork.Models.LoginViewModel 
<h1>Login</h1>

@{
    if(@ViewBag.loginErrors != null){
        <p class="error">@ViewBag.loginErrors</p>
    }
}
<form asp-controller="Home" asp-action="login" method="post">
    <div>
            
        <div class="form-group">
            <span asp-validation-for="Email"></span>
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control"/>
        </div>

        <div class="form-group">
            <span asp-validation-for="Password"></span>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control"/>
        </div>

    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<a href="/" class="btn btn-primary">Not a User? Register!</a>


