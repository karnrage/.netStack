@{
    ViewData["Title"] = "Home Page";
}
<h1>Pokeapi~</h1>
<p>Get to adding stuff</p>
<p>Where below it says {id or name}, put the name or id of the Pokemon<p>
<p>Enter this in your URL: api/v2/ability/{id or name}<p>
NEED TO ENTER AS SUCH:   http://localhost:5000/pokemon/55

<!-- app search page-->
@if(@ViewBag.Pokemon != null){
    <div>
        <h2>@ViewBag.Pokemon.Name</h2> 
        <h3>Types:</h3>
        <ul>
        @foreach( var type in @ViewBag.Pokemon.Types)
        {
            <li>@type</li>
        }
        </ul>
        <h3>Height: @ViewBag.Pokemon.Height</h3>
        <h3>Weight: @ViewBag.Pokemon.Weight</h3> 
    </div>
}