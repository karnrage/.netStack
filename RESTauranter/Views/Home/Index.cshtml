@using RESTauranter.Models;
<!-- need access to the models -->
@model RESTauranter.Models.thisUserReview

<link href="https://fonts.googleapis.com/css?family=Oswald:700|Patua+One|Roboto+Condensed:700" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<!-- need aCTON AND METHOD STILL -->
<section id="contact" class="content-section text-center">
        <div class="contact-section">
            <div class="container">
              <h2>Write a new review</h2>
              <p>Feel free to shout us by feeling the contact form or visiting our social network sites like Fackebook,Whatsapp,Twitter.</p>
              <div class="row">
                <div class="col-md-8 col-md-offset-2">
                  <form action="/Process" method="post" class="form-horizontal">
                    <div class="form-group">
                      <label for="exampleInputName2">Reviewer Name</label>
                      <input asp-for="reviewer_name" name="reviewer_Name" type="text" class="form-control" id="exampleInputName2" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputEmail2">Restaurant Name</label>
                      <input asp-for="restaurant_name" name="restaurant_Name" type="text" class="form-control" id="exampleInputEmail2" placeholder="Restaurant">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputText">Your Review</label>
                     <textarea asp-for="review" name="Review" class="form-control" placeholder="Restaurant Review"></textarea> 
                    </div>
                    <div class="form-group">
                      <label for="exampleInputText">Date</label>
                     <input type="date" asp-for="visit_date"   name="visit_date" class="form-control" placeholder="date">

                     <!-- name takes priority asp-for, type takes priority over what asp-for self assign is for. if type is empty  -->
                    </div>
                    <select asp-for="stars" name="stars">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>

                    </select>
                    <button type="submit" class="btn btn-default">Send Review</button>

                     <div class="row form-group">
                        @{
                            if(TempData["dateError"] != null)
                            {
                                @TempData["dateError"]
                            }
                        }
                        <!-- <input type="submit" value="submit"> -->
                    </div>
                    
                  </form>

                  <hr>
                    <h3>Our Social Sites</h3>
                  <ul class="list-inline banner-social-buttons">
                    <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-twitter"> <span class="network-name">Twitter</span></i></a></li>
                    <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-facebook"> <span class="network-name">Facebook</span></i></a></li>
                    <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-youtube-play"> <span class="network-name">Youtube</span></i></a></li>
                  </ul>
                </div>
              </div>
            </div>
        </div>
      </section>