<h1>Registration</h1>

<!-- asp-controller = name of controller. FE HomeController is home -->
<!-- asp-action ties form to the functon/route -->
<form asp-controller="Home" asp-action="register" method="post">
<span>
<!-- if model class is already imported up top, when setting asp, do not call on it again -->
<!-- asp-for only does validations, need name to take in the parameter -->
    <label asp-for="@Model.registerVM.firstName"></label>
    <input  asp-for="@Model.registerVM.firstName"/>

    <label asp-for="@Model.registerVM.lastName"></label>
    <input  asp-for="@Model.registerVM.lastName"/>

    <label asp-for="@Model.registerVM.username"></label>
    <input asp-for="@Model.registerVM.username"/>


    <label asp-for="@Model.registerVM.password"></label>
    <input asp-for="@Model.registerVM.password"/>

   
    <label asp-for="@Model.registerVM.confirmRegPassword"></label>
    <input asp-for="@Model.registerVM.confirmRegPassword"/>
</span>
    <button type="submit">Create New User</button>
