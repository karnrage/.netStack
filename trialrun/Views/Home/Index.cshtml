<h1>Login</h1>

<!-- asp-action ties form to the functon/route -->
<form asp-controller="Home" asp-action="login" method="post">
<span>
<!-- if model class is already imported up top, when setting asp, do not call on it again -->
<!-- asp-for only does validations, need name to take in the parameter -->


    <label asp-for="@Model.loginVM.username"></label>
    <input asp-for="@Model.loginVM.username"/>


    <label asp-for="@Model.loginVM.password"></label>
    <input asp-for="@Model.loginVM.password"/>


</span>
    <button type="submit">Login User</button>
</form>

<hr>
